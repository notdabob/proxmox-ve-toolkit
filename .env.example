# ============================================================================
# AI Code Assist Environment Variables
# ============================================================================
# Copy this file to .env and update with your actual API keys
# Only configure the providers you plan to use

# ============================================================================
# AI Provider API Keys (Alphabetical)
# ============================================================================

# Anthropic Claude
# Get your API key from: https://console.anthropic.com/
CLAUDE_API_KEY=
ANTHROPIC_API_KEY=

# Google Gemini  
# Get your API key from: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=

# xAI Grok
# Get your API key from: https://console.x.ai/
GROK_API_KEY=

# OpenAI (ChatGPT, GPT-4)
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=

# ============================================================================
# Optional API Endpoints (Usually not needed)
# ============================================================================

CLAUDE_API_ENDPOINT=https://api.anthropic.com
GEMINI_API_ENDPOINT=https://generativelanguage.googleapis.com
GROK_API_ENDPOINT=https://api.x.ai/v1
OPENAI_API_ENDPOINT=https://api.openai.com/v1

# ============================================================================
# AI Configuration
# ============================================================================

# Default provider: claude, gemini, grok, openai
DEFAULT_AI_PROVIDER=claude

# Model settings
MAX_TOKENS=4000
TEMPERATURE=0.7

# ============================================================================
# Environment Configuration
# ============================================================================

ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO

# ============================================================================
# Project Settings
# ============================================================================

PROJECT_NAME=ai-codeassist-boilerplate
PROJECT_VERSION=1.0.0

# Development
ENABLE_TELEMETRY=false